<div class="datos">
    <div itemprop="name" class="titulo"><h1><%= this.clip.titulo %></h1></div>

    <div class="espaciotiempo"><% if (this.clip.ciudad) { %><span class="ciudad"><%= this.clip.ciudad %>, </span><% } %> <% if (this.clip.pais) { %><span class="pais"><%= this.clip.pais.nombre %></span><% } %> | <span class="fecha"><%= this.clip.getFechaTexto(true) %></span></div>

    <div class="duracion"><span>Duración:</span> <%= this.clip.duracion %></div>

    <div itemprop="description" class="descripcion"><% if (clip.descripcion) { %><%= this.clip.descripcion %><% } else if (this.clip.programa) { %><%= this.clip.programa.descripcion %><% } %></div>

    <% if (this.clip.corresponsal) { %><div class="clasificacion corresponsal"><span>Corresponsal:</span> <%= this.clip.corresponsal.nombre %></div><% } %>
    <% if (this.clip.categoria) { %><div class="clasificacion categoria"><span>Categoría:</span> <%= this.clip.categoria.nombre %></div><% } %>

    <% if (this.clip.entrevistado) { %><div class="clasificacion entrevistado"><span>Entrevistado:</span> <%= this.clip.entrevistado.nombre %></div><% } %>
    <% if (this.clip.entrevistador) { %><div class="clasificacion entrevistador"><span>Entrevistador:</span> <%= this.clip.entrevistador.nombre %></div><% } %>

    <% if (this.clip.programa && this.clip.tipo.slug != 'programa') { %><div class="clasificacion programa"><span>Programa de origen:</span> <%= this.clip.programa.nombre %></div><% } %>

    <!--<% if (this.clip.tags) { %><div class="clasificacion tags"><span>Tags:</span> <%= this.clip.tags %></div><% } %>-->
</div>


